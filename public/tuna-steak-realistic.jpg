<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="plateGrad" cx="0.5" cy="0.3" r="0.8">
      <stop offset="0%" style="stop-color:#ffffff"/>
      <stop offset="80%" style="stop-color:#f8f9fa"/>
      <stop offset="100%" style="stop-color:#e9ecef"/>
    </radialGradient>
    <linearGradient id="tunaGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFB6C1"/>
      <stop offset="30%" style="stop-color:#F08080"/>
      <stop offset="60%" style="stop-color:#DC143C"/>
      <stop offset="80%" style="stop-color:#B22222"/>
      <stop offset="100%" style="stop-color:#8B0000"/>
    </radialGradient>
    <radialGradient id="tunaCenter" cx="0.4" cy="0.4" r="0.5">
      <stop offset="0%" style="stop-color:#FF1493"/>
      <stop offset="50%" style="stop-color:#DC143C"/>
      <stop offset="100%" style="stop-color:#8B0000"/>
    </radialGradient>
    <filter id="shadow">
      <feDropShadow dx="2" dy="3" stdDeviation="3" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="#f5f5f5"/>
  
  <!-- Plate -->
  <ellipse cx="200" cy="220" rx="160" ry="40" fill="url(#plateGrad)" stroke="#ddd" stroke-width="1"/>
  
  <!-- Main tuna steak -->
  <ellipse cx="200" cy="160" rx="55" ry="40" fill="url(#tunaGrad)" filter="url(#shadow)"/>
  
  <!-- Raw center (seared outside) -->
  <ellipse cx="200" cy="160" rx="35" ry="25" fill="url(#tunaCenter)"/>
  
  <!-- Seared crust -->
  <path d="M145 135 Q165 130 185 135 Q205 140 225 135 Q245 130 255 135 Q250 145 230 150 Q210 155 190 150 Q170 145 150 150 Q145 145 145 135" 
        fill="#2F1B14" opacity="0.8"/>
  <path d="M150 185 Q170 180 190 185 Q210 190 230 185 Q250 180 260 185 Q255 195 235 200 Q215 205 195 200 Q175 195 155 200 Q150 195 150 185" 
        fill="#2F1B14" opacity="0.8"/>
  
  <!-- Grill marks -->
  <g stroke="#1A1A1A" stroke-width="3" opacity="0.9">
    <line x1="155" y1="145" x2="245" y2="160"/>
    <line x1="160" y1="165" x2="250" y2="180"/>
    <line x1="165" y1="185" x2="235" y2="195"/>
  </g>
  
  <!-- Fish texture lines -->
  <g stroke="#B22222" stroke-width="1" fill="none" opacity="0.6">
    <path d="M175 150 Q200 155 225 150"/>
    <path d="M180 160 Q200 165 220 160"/>
    <path d="M175 170 Q200 175 225 170"/>
  </g>
  
  <!-- Surface highlights -->
  <ellipse cx="185" cy="150" rx="18" ry="10" fill="#FFB6C1" opacity="0.6"/>
  <ellipse cx="215" cy="165" rx="15" ry="8" fill="#F08080" opacity="0.5"/>
  
  <!-- Sesame seed crust -->
  <g fill="#F5DEB3" opacity="0.9">
    <circle cx="170" cy="145" r="1.2"/>
    <circle cx="185" cy="140" r="1"/>
    <circle cx="200" cy="142" r="1.3"/>
    <circle cx="215" cy="139" r="1.1"/>
    <circle cx="230" cy="144" r="1.2"/>
    <circle cx="175" cy="155" r="1"/>
    <circle cx="190" cy="152" r="1.4"/>
    <circle cx="205" cy="154" r="1.1"/>
    <circle cx="220" cy="151" r="1.2"/>
    
    <!-- Bottom crust -->
    <circle cx="175" cy="185" r="1.1"/>
    <circle cx="190" cy="188" r="1.3"/>
    <circle cx="205" cy="186" r="1"/>
    <circle cx="220" cy="189" r="1.2"/>
    <circle cx="235" cy="187" r="1.1"/>
  </g>
  
  <!-- Soy sauce glaze -->
  <ellipse cx="200" cy="155" rx="40" ry="25" fill="#2F1B14" opacity="0.3"/>
  
  <!-- Wasabi garnish -->
  <g transform="translate(270, 170)">
    <ellipse cx="0" cy="0" rx="8" ry="4" fill="#9ACD32"/>
    <ellipse cx="1" cy="-1" rx="5" ry="2.5" fill="#ADFF2F" opacity="0.8"/>
  </g>
  
  <!-- Pickled ginger -->
  <g transform="translate(140, 185)">
    <path d="M0 0 Q5 -2 10 0 Q8 3 5 4 Q2 3 0 0" fill="#FFB6C1"/>
    <path d="M1 1 Q4 -1 8 1 Q7 3 4 3.5 Q2 2.5 1 1" fill="#FFC0CB"/>
  </g>
  
  <!-- Steam -->
  <g opacity="0.3" stroke="#ffffff" stroke-width="2" fill="none">
    <path d="M180 125 Q182 115 180 110 Q178 105 180 100"/>
    <path d="M200 120 Q202 110 200 105 Q198 100 200 95"/>
    <path d="M220 125 Q222 115 220 110 Q218 105 220 100"/>
  </g>
  
  <!-- Chopsticks -->
  <g transform="translate(300, 140)">
    <rect x="0" y="0" width="2" height="60" fill="#D2691E" rx="1"/>
    <rect x="4" y="0" width="2" height="60" fill="#D2691E" rx="1"/>
    <rect x="0" y="0" width="2" height="4" fill="#8B4513" rx="1"/>
    <rect x="4" y="0" width="2" height="4" fill="#8B4513" rx="1"/>
  </g>
</svg>
